<div class="row">
  <div class="col-xs-4">
  </div>
  <div class="col-xs-3">
      <%= form_for(@event) do |f| %>
        <div class="form-group">
        <% if @event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

            <ul>
            <% @event.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title , class: "form-control"%>
        </div>
        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_field :description , class: "form-control"%>
        </div>
        <div class="field">
          <%= f.label :start_date %><br>
          <%= f.datetime_select :start_date , class: "form-control"%>
        </div>
        <div class="field">
          <%= f.label :end_date %><br>
          <%= f.datetime_select :end_date , class: "form-control"%>
        </div>
        <div class="field">
          <%= f.label :location_name %><br>
          <%= f.text_field :location_name , class: "form-control"%>
        </div>

        <%= f.fields_for :location do |location_field| %>
          Address: <%= location_field.text_field :address , class: "form-control", placeholder: "Only if Latitude and Longitude are empty"%>
          Latitude: <%= location_field.text_field :latitude, value: @latitude , class: "form-control"%>
          Longitude: <%= location_field.text_field :longitude, value: @longitude , class: "form-control"%>
         <% end %>

     
         <div class="center"> <%= f.submit "Save event", class: "btn btn-primary btn-lg btn-block"%> </div>

      <% end %>
    </div>
    </div>
  </div>

